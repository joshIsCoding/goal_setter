
<form action="<%= mode == :new_user ? users_url : sessions_url %>" method="post">
   <%= auth_token %>
   <label for="user_username">Username:</label>
   <input id="user_username" type="text" name="user[username]">

   <label for="user_password">Password:</label>
   <input id="user_password" type="password" name="user[password]">

   <input type="submit" value="<%= mode == :new_user ? "Sign Up!" : "Sign In" %>">
</form>