<section class="comments">
   <% comments.each do |comment| %>
   <article class="comment" id="<%= "c-#{comment.id}" %>">
      <header>
         <h6><%= link_to comment.author_name, user_url(comment.author_id) %>
          commented <%= comment.created_at %></h6>
      </header>
      <p><%= comment.contents %></p>
      <footer>
         <% if comment.author_id == current_user.id %>
            <%= button_to"Delete Comment", comment_url(comment), method: :delete %>
         <% end %>
      </footer>
   </article>
   <% end %>
</section>