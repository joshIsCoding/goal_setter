<!DOCTYPE html>
<html>
  <head>
    <title>Resolute</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/c08ce6939b.js" crossorigin="anonymous">
    </script>
  </head>

  <body>
    <header id="user_controls">
      <nav class="clearfix">
        <h1 class="logo">
          <a href="<%= root_url %>">
            <i class="fas fa-check-square"></i> <!-- tick icon -->
            <!-- tag layout to prevent automatic spaces between letters -->
            <strong>r<em
            >e</em></strong
            ><strong>s<em
            >o</em></strong
            ><strong>l<em
            >u</em></strong
            ><strong>t<em
            >e</em></strong>
          </a>
        </h1>
        <ul class="main-links">
          <li><%= link_to "Browse Goals", goals_url %></li>
          <li><%= link_to "Browse Users", users_url %></li>
        </ul>
      
        <% if is_logged_in? %>
        <ul class="user-info">
          <li><%= link_to current_user.username, user_url(current_user) %></li>
          <li><%= "#{current_user.up_votes_left} upvotes remaining" %></li>
          <li class="hamburger">
            <svg viewBox="0 0 80 50" width="40" height="30">
              <rect width="80" height="10" rx="8"></rect>
              <rect y="20" width="80" height="10" rx="8"></rect>
              <rect y="40" width="80" height="10" rx="8"></rect>
            </svg>
            <ul class="user-menu">
              <li><%= link_to "Your Profile", user_url(current_user) %></li>
              <li>
                  <%= link_to "Manage Account", user_sessions_url(current_user) %>
              </li>
              <li>
                <%= button_to "Logout", session_url(current_session), method: :delete, class: "logout" %>
              </li>
            </ul>
          </li>
        </ul>
          
        <% else %>
        <ul class="session-buttons">
          <li><%= button_to "Register", new_user_url, method: :get, class: "sign-up"%></li>
          <li><%= button_to "Login", new_session_url, method: :get, class: "login"%></li>
        </ul>
        <% end %>        
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
